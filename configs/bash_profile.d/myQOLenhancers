# overwrite system clipboard with primary buffer
zz() {
    echo -ne "\033[K\033[F\033[K\033[F" && wl-paste -p | wl-copy -n
}

alias lout='qdbus org.kde.ksmserver /KSMServer logout 0 0 0'


