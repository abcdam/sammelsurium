###==================================================================##
## utilities
#####


lsdu() { du -ah -d 1 | sort -h; }

g2g() {
  target="$HOME/dev/git";retval=0
  case "$1" in
    h)  target="${target}hub" ;;
    l)  target="${target}lab" ;;
    *)  retval=1              \
          && printf "invalid arg. must be 'h' or 'l' but received: %s\n" "$1" >&2
      ;;
  esac
  if [ $retval -eq 0 ]; then
    if [ -d "$target" ]; then
      cd "$target" || retval=$?
    else
      retval=1
      printf "error: '%s' not a dir\n" "$target" >&2
    fi
  fi
  unset target
  return $retval
}

pp() {
  retval=0;a=run
  case "$1" in
    d)      a="$a dev"                ;;
    c)      a="$a check"              ;;
    b)      a="$a build"              ;;
    p)      a="$a preview"            ;;
    a)      a='add -D'                ;;
    lsv)    a='outdated --compatible' ;;
    *)      a="$1"                    ;;
  esac; shift
  pnpm $a "$@" || retval=$?
  unset a
  return $retval
}

mkctl() {
    case "$1" in
        gpa)
            mkubectl get pods --all-namespaces
            ;;
        afd)
            [ -z "$2" ] \
                && echo "err: missing deployment file for dry-run." \
                && return 1
            mkubectl apply -f "$2" --dry-run=server
            ;;
        af)
            [ -z "$2" ] \
                && echo "err: missing deployment file" \
                && return 1
            mkubectl apply -f "$2"
            ;;
        df)
            [ -z "$2" ] \
                && echo "err: missing deployment file" \
                && return 1
            mkubectl delete -f "$2"
            ;;
        *)
            mkubectl "$@"
            ;;
    esac
}


