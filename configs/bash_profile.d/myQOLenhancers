alias rsc='rsync --progress --outbuf=N --human-readable --archive --verbose --recursive --partial --mkpath --stats'
alias ll='ls -la'
alias sscreen='split-screen-monitor.sh'
alias webcam='sudo launch_webcam'
alias mkubectl="mkube kubectl --"


