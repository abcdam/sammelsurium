set mouse=		    " disable mouse support
set background=dark	" ..
set showmatch       " highlight matching brackets
set hlsearch		" highlight search results
set ignorecase      " case insensitive matching
set autoindent		" inherit indentation from preceeding line
set expandtab		" converts tabs to spaces
set tabstop=4		" 1 tab := 4 spaces
set wrap		    " ..
set linebreak		" wrap lines at characters in 'breakat'
set scrolloff=2		" always keep 2 lines above and below cursor
set number		    " enable line numbering
set noerrorbells	" disable annoying sound
set visualbell		" enable bangless flashbang instead hehe
set title		    " show file name 
set statusline+=%F  " show full path
set laststatus=2    " make statusline always visible
syntax on
